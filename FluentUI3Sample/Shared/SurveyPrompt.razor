    <FluentLabel Typo="Typography.PaneHeader">@Title</FluentLabel>
    <FluentLabel Typo="Typography.Body">
        Please take our
        <FluentAnchor Href="https://go.microsoft.com/fwlink/?linkid=2186157" Target="_blank" Appearance="Appearance.Hypertext">brief survey</FluentAnchor>
        and tell us what you think.
    </FluentLabel>
