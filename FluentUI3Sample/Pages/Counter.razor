@page "/counter"

<FluentGrid Spacing="3" Justify="JustifyContent.FlexStart">
    <FluentGridItem xs="12" sm="12" md="12" lg="12" xl="12" xxl="12" >
        <FluentLabel Typo="Typography.Header">Counter</FluentLabel>
    </FluentGridItem>
    <FluentGridItem xs="12" sm="12" md="12" lg="12" xl="12" xxl="12">
        <FluentLabel Typo="Typography.H1">Counter</FluentLabel>
    </FluentGridItem>
    <FluentGridItem xs="6" sm="3" md="3" lg="3" xl="3" xxl="3">
        <FluentLabel Typo="Typography.Body">Current count: @currentCount</FluentLabel>
    </FluentGridItem>
    <FluentGridItem xs="3" sm="3" md="3" lg="3" xl="2" xxl="2">
        <FluentButton Appearance="Appearance.Accent" OnClick="IncrementCount">Click me</FluentButton>
    </FluentGridItem>
</FluentGrid>
@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
